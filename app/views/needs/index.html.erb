<h1>Listing needs</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Description</th>
    <th>User</th>
    <th>Skill</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @needs.each do |need| %>
  <tr>
    <td><%= need.title %></td>
    <td><%= need.description %></td>
    <td><%= need.user %></td>
    <td><%= need.skill %></td>
    <td><%= link_to 'Show', need %></td>
    <td><%= link_to 'Edit', edit_need_path(need) %></td>
    <td><%= link_to 'Destroy', need, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Need', new_need_path %>

<%= will_paginate @needs %>

